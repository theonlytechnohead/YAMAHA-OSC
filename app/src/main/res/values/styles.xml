<resources>

	<style name="Widget.Theme.TouchFaders.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/black_overlay</item>
	</style>

	<style name="Widget.Theme.TouchFaders.MixButton" parent="">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">25sp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetTop">0dp</item>
	</style>

	<style name="Widget.Theme.TouchFaders.BoxedVerticalSeekBar" parent="">
		<item name="max">1023</item>
		<item name="startValue">623</item> <!-- now -10dB -->
		<item name="min">0</item>
		<item name="step">1</item>
		<item name="gradientStart">@color/teal_200</item>
		<item name="gradientEnd">@color/white</item>
		<item name="backgroundColor">@color/color_background</item>
		<item name="corner">15</item>
		<item name="textSize">15sp</item>
		<item name="textColor">@color/black</item>
		<item name="android:layout_marginStart">5dp</item>
		<item name="android:layout_marginEnd">5dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

</resources>